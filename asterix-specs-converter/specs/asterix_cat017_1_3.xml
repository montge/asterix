    <DataItem id="210">
        <DataItemName>Mode S Address List</DataItemName>
        <DataItemDefinition>
            Repetitive Data Item starting with a one-octet Repetition Factor
            followed by at least one Mode S Address of 3-octets length.
        </DataItemDefinition>
        <DataItemFormat desc="Repetitive data item.">
            <Repetitive>
                <Bits from="24" to="1">
                    <BitsShortName>MSAL</BitsShortName>
                    <BitsName>Mode S Address List</BitsName>
                </Bits>
            </Repetitive>
        </DataItemFormat>
