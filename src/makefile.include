ifndef TOP
TOP =..
endif

ifndef TOP_SED
TOP_SED =..
endif

ifndef CUR_DIR
CUR_DIR = .
endif

# Export variables for sublevel makefiles
export CC CFLAGS AS LD AR STRIP
CC            = g++
AS            = as
LD            = g++
AR            = ar
STRIP         = strip
OBJCOPY       = objcopy
CXX           = g++
GDEBUG        = gdb
RANLIB        = ranlib

# Default compiler defines
#GLOBAL_DEFINES = -D_CONVERTER

ifeq ($(MODE), DEBUG)
# Debug version
CWARNING := -Wall
DEBUGFLAGS := -g -O0
# SECURITY: Stack protection for debug builds
SECURITY_FLAGS := -fstack-protector-strong
BASE_FLAGS := $(DEBUGFLAGS) $(CWARNING) $(SECURITY_FLAGS) -D_DEBUG $(GLOBAL_DEFINES)
OBJ_DIR_SHORT = debug
OBJ_DIR = $(TOP)/obj/$(CUR_DIR)/$(OBJ_DIR_SHORT)
else
# Retail version
CWARNING := -Wall
# SECURITY: Stack protection + buffer overflow detection (requires -O2)
SECURITY_FLAGS := -fstack-protector-strong -D_FORTIFY_SOURCE=2
BASE_FLAGS := $(CWARNING) -O2 $(SECURITY_FLAGS) $(GLOBAL_DEFINES)
OBJ_DIR_SHORT = release
OBJ_DIR = $(TOP)/obj/$(CUR_DIR)/$(OBJ_DIR_SHORT)
endif

# C17 and C++17 standard versions
CSTD   := -std=c17
CXXSTD := -std=c++17

INCLUDEDIRS   = -I$(TOP)/src/engine \
                -I$(TOP)/src/asterix \
                -I$(TOP)/src/main

LIBDIRS       = -L$(TOP)/lib/$(OBJ_DIR_SHORT)
ARFLAGS       = rcs
# SECURITY: Read-only relocations for hardening against GOT/PLT attacks
LDFLAGS       = $(LIBDIRS) -Wl,-z,relro,-z,now
CFLAGS        = $(BASE_FLAGS) $(CSTD)
CXXFLAGS      = $(BASE_FLAGS) $(CXXSTD)
EXTRACFLAGS   = $(INCLUDEDIRS)
EXTRACXXFLAGS = $(EXTRACFLAGS)
.PHONY: depend clean install all

